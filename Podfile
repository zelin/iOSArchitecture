# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'iOSArchitecture' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Firebase framework cores
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Messaging'
  pod 'CodableFirebase'
  # Pod For animated placeholders
  pod 'SkeletonView'
  # Pod for lazzy loading image
  pod 'SDWebImage'

  # Pods for Custom utils
  pod 'IQKeyboardManagerSwift'
  pod 'SwiftLint'
  pod 'MBProgressHUD'
  
  # Pods for Dependency Injection
  pod 'Resolver'

  target 'iOSArchitectureTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'iOSArchitectureUITests' do
    # Pods for testing
  end

end
